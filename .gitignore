from time import sleep
from random import randint
# A função randint faz com que o programa escolha um numero aleatorio entre os que você escolheu
escolhido = randint(0, 10)

print('Pensando num numero de 0 à 10...')
sleep(1.5)

print(' ')

numero = int(input('Tente adivinha-lo! Coloque algum numero...: '))

print(' ')

print('PROCESSANDO RESULTADOS...')
# sleep() faz com que o programa espere um tempo especificado
# antes de continuar executando.
sleep(1.5)

print(' ')

if numero == escolhido:
    print('Você acertou!')
    print(f'O numero que o computador escolheu foi {escolhido}...')
else:
    print('Você errou!')
    print(' ')
    dica = str(input('Quer mais uma chance?? ')).lower().strip()
    print(' ')
    if dica in ['sim', 'ss', 's', 'quero', 'qr']:
        abaixo = escolhido + 3
        print(f'Ok, la vai uma a dica então: '
              ' pense em algum numero perto do {abaixo}...')
        print(' ')
        num = int(input('Coloque um numero novamente: '))
        print(' ')
        if num == escolhido:
            print('Você acertou!')
            print(f'O numero escolhido foi {escolhido}')
        else:
            print('Acabaram as chances :( ')
            print(' ')
            print('O numero correto era {escolhido}')
    else:
        print('Ok, então tente novamente!')
